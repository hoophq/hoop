FROM hoophq/agent-tools:0.0.1

ENV DEBIAN_FRONTEND=noninteractive

COPY rootfs /
COPY dist/binaries/ /tmp/
RUN tar -xf /tmp/hoop_*_$(uname -s)_$(dpkg --print-architecture).tar.gz -C /app/ && \
    chown root:root /app/hoop && \
    chmod 755 /app/hoop && \
    rm -rf /tmp/* && \
    rm -rf /var/cache/apt/archives /var/lib/apt/lists/*

# start agent by default for this image
CMD ["hoop", "start", "agent"]
